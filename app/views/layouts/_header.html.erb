<header class="navbar-fixed-top navbar-inverse">
  <div class="container">

  <div class="row">
  <div class="col-sm-4">

    <%= link_to "twitterz", '/', id: "logo" %>
</div>
<% if logged_in? %>

  <%= form_tag(users_path, method: :get) do %>
    <div class="col-sm-4 padding-0 ">
      <%= text_field_tag :name, params[:name], :required => true,class: 'form-control no-border-radius',placeholder:'Search' %>
    </div>
    <div class="col-sm-1 padding-0 ">
    <button type="submit" class="btn btn-default no-border-radius">
    <span class="glyphicon glyphicon-search"></span> 
  </button>
    </div>
  <% end %>
<% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
          </ul>
    </nav>
    </div>
  </div>
</header>